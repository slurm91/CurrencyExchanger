<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Parent TextAppearance-->
    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Title.Capitalized">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Title.Capitalized.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.Title.Capitalized.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Balance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Balance.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Balance.Medium.Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TextAppearance.Balance.Large">
        <item name="android:textSize">20sp</item>
    </style>

</resources>